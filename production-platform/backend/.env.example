# Ubuntu Health Backend API Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ubuntu_health?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_COMMITMENT=confirmed
SOLANA_KEYPAIR_PATH=./keypairs/deployer.json

# Smart Contract Addresses (Devnet)
TREATMENT_SPONSORSHIP_PROGRAM=
DATA_REWARDS_PROGRAM=
GOVERNANCE_PROGRAM=

# Token Configuration
LIVES_TOKEN_MINT=
USDC_TOKEN_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# IPFS Configuration
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=
IPFS_API_SECRET=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@ubuntuhealth.io

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# Healthcare Compliance
HIPAA_COMPLIANT=true
GDPR_COMPLIANT=true
AUDIT_ENABLED=true

# Monitoring & Analytics
SENTRY_DSN=
MIXPANEL_TOKEN=
GOOGLE_ANALYTICS_ID=

# Third-party Integrations
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Development Tools
LOG_LEVEL=debug
SWAGGER_ENABLED=true
CORS_ORIGIN=http://localhost:3000